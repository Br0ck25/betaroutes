{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "explicit"
	},

	// FORCE VS Code to use your project's strict TypeScript version
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,

	"svelte.enable-ts-plugin": true,
	// "svelte.plugin.svelte.note-new-code": true, // Recommended: Remove this (it is not a standard Svelte setting and may cause noise)

	"files.associations": {
		"*.css": "tailwindcss",
		"*.svelte": "svelte"
	},

	"html.validate.scripts": false,
	"html.validate.styles": false,
	"html.format.enable": false,
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"eslint.validate": ["svelte", "javascript", "typescript"],

	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.eol": "\n"
}
